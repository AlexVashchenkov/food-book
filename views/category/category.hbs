<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Список блюд | Кулинарная книга</title>
  {{> styles}}
  <style>
    .dishes-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
      padding: 20px 20px;
    }

    .dish-card {
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .dish-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .dish-image {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .dish-info {
      padding: 15px;
    }

    .dish-name {
      margin: 0 0 10px 0;
      text-decoration: none;
      color: black;
      font-size: 1.2rem;
    }

    .dish-category {
      display: inline-block;
      padding: 3px 8px;
      background-color: #f0f0f0;
      border-radius: 4px;
      font-size: 0.8rem;
      color: #555;
    }

    .no-dishes {
      text-align: center;
      padding: 40px 0;
      color: #666;
    }

    .page-header {
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .add-dish-btn {
      display: inline-block;
      padding: 5px 15px;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }

    .category-actions {
      display: flex;
      gap: 10px;
    }

    .btn-edit, .btn-delete {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      color: white;
    }

    .btn-edit {
      background-color: #4CAF50;
    }

    .btn-delete {
      background-color: #f44336;
    }
  </style>
</head>
<body>
{{> header}}

<main class="container">
  <div class="page-header">
    <h1>Список блюд категории {{category.name}}</h1>
    <div class="category-actions">
      <a href="/categories/{{category.id}}/edit" class="btn-edit">Редактировать категорию</a>
      <button class="btn-delete" onclick="deleteCategory({{category.id}})">Удалить категорию</button>
    </div>
    {{#if dishes.length}}
      <a href="/dishes/add" class="add-dish-btn">Добавить блюдо</a>
    {{/if}}
  </div>

  {{#if dishes.length}}
    <div class="dishes-grid">
      {{#each dishes}}
        <div class="dish-card">
          <a href="/dishes/{{this.id}}" style="text-decoration: none; color: black">
            {{#if this.photo}}
              <img src="{{this.photo}}" alt="{{this.name}}" class="dish-image" style="text-decoration: none">
            {{else}}
              <img src="public/img/no_photo.jpg" alt="{{this.name}}" class="dish-image">
            {{/if}}
            <div class="dish-info">
              <h3 class="dish-name">{{this.name}}</h3>
              {{#if this.category}}
                <span class="dish-category"
                      style="background-color: {{this.category.color}};">{{this.category.name}}</span>
              {{/if}}
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="no-dishes">
      <p>Пока нет добавленных блюд. <a href="/dishes/add">Добавить первое блюдо</a></p>
    </div>
  {{/if}}
</main>

{{> footer}}

<script>
  async function deleteCategory(id) {
    if (!confirm('Вы уверены, что хотите удалить эту категорию?')) return;

    try {
      const response = await fetch(`/categories/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.href = '/categories';
      } else {
        const error = await response.json();
        alert(error.message || 'Ошибка при удалении');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Ошибка при удалении категории');
    }
  }
</script>
</body>
</html>