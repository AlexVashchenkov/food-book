<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Список категорий</title>
  {{> styles}}
  <style>
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      padding: 20px 0;
    }
    .category-card {
      border-radius: 8px;
      padding: 20px;
      transition: transform 0.3s ease;
      color: white;
      text-shadow: 0 1px 2px rgba(0,0,0,0.3);
      height: 120px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      background-color: {{this.color}};
    }
    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .category-name {
      margin: 0 0 10px 0;
      font-size: 1.3rem;
    }
    .category-name a {
      color: black;
      text-decoration: none;
    }
    .category-actions {
      display: flex;
      gap: 10px;
    }
    .add-category-btn {
      display: inline-block;
      margin-left: 20px;
      padding: 5px 15px;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    .btn-edit, .btn-delete {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .btn-edit {
      background-color: #4CAF50;
      color: white;
    }
    .btn-delete {
      background-color: #4CAF50;
      color: white;
    }
  </style>
</head>
<body>
{{> header}}

<main class="container">
  <div class="page-header">
    <h1>Категории блюд</h1>
    <a href="/categories/add" class="add-category-btn">Добавить категорию</a>
  </div>

  {{#if categories.length}}
    <div class="categories-grid">
      {{#each categories}}
        <div class="category-card" style="background-color: {{this.color}}">
          <div>
            <h3 class="category-name">
              <a href="/categories/{{this.id}}">{{this.name}}</a>
            </h3>
            <p>Блюд: {{this.dishes.length}}</p>
          </div>
          <div class="category-actions">
            <a href="/categories/{{this.id}}/edit" class="btn-edit">Редактировать</a>
            <button class="btn-delete" onclick="deleteCategory({{this.id}})">Удалить</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="no-categories">
      <p>Пока нет категорий. <a href="/categories/add">Добавить первую категорию</a></p>
    </div>
  {{/if}}
</main>

{{> footer}}
<script>
  async function deleteCategory(id) {
    if (!confirm('Вы уверены, что хотите удалить эту категорию?')) return;

    try {
      const response = await fetch(`/categories/${id}`, {
        method: 'DELETE'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        const error = await response.json();
        alert(error.message || 'Ошибка при удалении');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Ошибка при удалении категории');
    }
  }
</script>
</body>
</html>